
// ui/volumes.slint

struct VolumeData {
    name: string,
    driver: string,
    mountpoint: string,
    created: string,
    containers_count: int,
    in_use: bool,
}

component Button inherits Rectangle {
    in property <string> text;
    in property <bool> active: false;
    in property <bool> enabled: true;
    in property <length> size_w: 64px;
    in property <length> size_h: 32px;
    in property <brush> bg: #2e3030;
    callback clicked <=> touch.clicked;

    height: size_h;
    width: size_w;
    background: !root.enabled ? #4b5563 : root.active ? #0ea5e9 : bg;
    border-radius: 6px;
    border-width: root.active ? 2px : 0px;
    border-color: #0ea5e9;

    touch := TouchArea {
        enabled: root.enabled;
    }

    Text {
        text: root.text;
        color: !root.enabled ? #9ca3af : #ffffff;
        horizontal-alignment: center;
        vertical-alignment: center;
        font-size: 14px;
        x: 8px;
        y: 0px;
        width: parent.width - 16px;
        height: parent.height;
    }
}

component ErrorMessage inherits Rectangle {
    in property <string> text;
    in property <brush> bg;
    in property <brush> text-color;

    background: bg;
    border-radius: 8px;
    padding-left: 16px;
    padding-right: 16px;

    Text {
        text: text;
        color: text-color;
        horizontal-alignment: center;
        vertical-alignment: center;
        font-size: 14px;
    }
}

component StatusIndicator inherits Rectangle {
    in property <bool> in_use;

    width: 12px;
    height: 12px;
    border-radius: 6px;
    background: in_use ? #ef4444 : #10b981; // Vermelho se em uso, verde se livre
}

component VolumeItem inherits Rectangle {
    in property <VolumeData> volume;
    in property <string> loading-action;
    callback volume-action(string);

    background: #2e3030;
    border-radius: 8px;
    height: 80px;

    HorizontalLayout {
        padding: 16px;
        spacing: 16px;
        alignment: space-between;

        HorizontalLayout {
            spacing: 16px;
            StatusIndicator {
                in_use: volume.in_use;
            }

            VerticalLayout {
                spacing: 4px;
                alignment: start;

                Text {
                    text: volume.name;
                    color: #ffffff;
                    font-size: 16px;
                    font-weight: 600;
                    overflow: elide;
                    width: 200px;
                }

                HorizontalLayout {
                    spacing: 12px;

                    Text {
                        text: "Driver: " + volume.driver;
                        color: #9ca3af;
                        font-size: 14px;
                    }

                    Text {
                        text: "Path: " + volume.mountpoint;
                        color: #9ca3af;
                        font-size: 12px;
                        overflow: elide;
                        width: 250px;
                    }
                }
            }
        }

        HorizontalLayout {
            spacing: 12px;

            VerticalLayout {
                alignment: center;

                Text {
                    text: volume.in_use ? "Em uso por containers" : "Disponível";
                    color: volume.in_use ? #ef4444 : #10b981;
                    font-size: 12px;
                    font-weight: 600;
                }

                Text {
                    width: 80px;
                    text: volume.created;
                    color: #6b7280;
                    font-size: 10px;
                }
            }

            VerticalLayout {
                alignment: center;
                spacing: 12px;

                Button {
                    text: loading-action == volume.name + "_remove" ? "..." : "Deletar";
                    bg: loading-action == volume.name + "_remove" ? #6b7280 : #1A1B1B;
                    enabled: !volume.in_use && loading-action == ""; // Só habilita se não estiver em uso
                        clicked => {
                        if (loading-action == "") {
                            volume-action("remove");
                        }
                    }
                }
            }
        }
    }
}

export component VolumesList inherits VerticalLayout {
    in property <[VolumeData]> volumes;
    in property <string> volume-list-error;
    in property <string> volume_success_message: "";
    in property <string> volume_error_in_use_message: "";
    in property <string> volume_error_other_message: "";
    in property <string> volume-loading;

    callback refresh-clicked();
    callback volume-action(string, string);

    padding: 24px;
    spacing: 24px;

    VerticalLayout {
        spacing: 20px;
        height: 64px;
        padding-top: 8px;
        vertical-stretch: 0;
        alignment: center;

        HorizontalLayout {
            alignment: space-between;

            Text {
                text: "Volumes";
                font-size: 24px;
                font-weight: 600;
            }

            if root.volume-list-error != "": ErrorMessage {
                bg: #ef444420;
                text: "Erro: " + root.volume-list-error;
                text-color: #ef4444;
            }

            if root.volume_success_message != "": ErrorMessage {
                bg: #10b98120;
                text: root.volume_success_message;
                text-color: #10b981;
            }

            if root.volume_error_in_use_message != "": ErrorMessage {
                bg: #ef444420;
                text: root.volume_error_in_use_message;
                text-color: #ef4444;
            }

            if root.volume_error_other_message != "": ErrorMessage {
                bg: #f9731620;
                text: root.volume_error_other_message;
                text-color: #f97316;
            }
        }
    }

    if volumes.length == 0: Rectangle {
        background: #2e3030;
        border-radius: 8px;
        height: 100px;

        Text {
            text: "Nenhum volume encontrado";
            color: #9ca3af;
            horizontal-alignment: center;
            vertical-alignment: center;
            font-size: 16px;
        }
    }

    if volumes.length > 0: Flickable {
        vertical-stretch: 1;

        VerticalLayout {
            spacing: 12px;

            for volume in volumes: VolumeItem {
                volume: volume;
                loading-action: volume-loading;
                volume-action(action) => {
                    volume-action(volume.name, action);
                }
            }
        }
    }
}
